<UserControl x:Class="Editor.Charts.ChartEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Charts"
             xmlns:DiagramCtrl="clr-namespace:Bga.Diagrams.Views;assembly=Diagrams"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DiagramCtrl:DiagramScrollView>
            <DiagramCtrl:DiagramView 
                                  AllowDrop="True"
                                  GridCellSize="120,100"
                                  DocumentSize="2000,2000"
                                  ShowGrid="True"></DiagramCtrl:DiagramView>
        </DiagramCtrl:DiagramScrollView>
    </Grid>
</UserControl>
