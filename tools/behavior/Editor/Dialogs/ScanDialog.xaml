<Window x:Class="Editor.Dialogs.ScanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.Dialogs"
        mc:Ignorable="d"
        Title="文件扫描" 
        Height="50" 
        Width="460"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="DarkGray"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ProgressBar Grid.Row="1" Height="20" IsIndeterminate="True"></ProgressBar>
        <TextBlock Margin="2" Grid.Row="2" Text="{Binding Prompt}"></TextBlock>
    </Grid>
</Window>
